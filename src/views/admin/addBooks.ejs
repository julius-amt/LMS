<div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-center text-3xl font-bold mb-6 text-gray-700">
        Add New Book
    </h2>

    <% if (typeof error !== 'undefined' && error) { %>
    <div
        class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
        role="alert"
    >
        <%= error %>
    </div>
    <% } %> <% if (typeof success !== 'undefined' && success) { %>
    <div
        class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4"
        role="alert"
    >
        <%= success %>
    </div>
    <% } %>

    <form
        action="/admin/books/create"
        enctype="multipart/form-data"
        method="POST"
    >
        <div class="mb-4">
            <label for="title" class="block text-gray-600 mb-2"
                >Book Title</label
            >
            <input
                type="text"
                id="title"
                name="title"
                required
                max="255"
                value="<%= typeof book !== 'undefined' && book.title ? book.title : '' %>"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500"
            />
        </div>

        <div class="mb-4">
            <label for="author" class="block text-gray-600 mb-2"
                >Author(s)
                <span
                    class="h-2 w-2 rounded-full bg-black px-1 text-sm text-white cursor-pointer"
                    title="Separate multiple authors with a comma"
                    >?</span
                ></label
            >
            <input
                type="text"
                id="author"
                name="author"
                required
                value="<%= typeof book !== 'undefined' && book.author ? book.author : '' %>"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500"
            />
        </div>

        <div class="mb-4">
            <label for="description" class="block text-gray-600 mb-2"
                >Description</label
            >
            <textarea
                id="description"
                name="description"
                rows="4"
                maxlength="500"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500"
            >
<%= typeof book !== 'undefined' && book.description ? book.description : '' %></textarea
            >
        </div>
        <!-- add image -->
        <div class="mb-4">
            <label for="coverImage" class="block text-gray-600 mb-2"
                >Cover Image</label
            >
            <input
                type="file"
                id="coverImage"
                name="coverImage"
                accept="image/*"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500"
            />
        </div>

        <button
            type="submit"
            class="w-full bg-gray-700 text-white py-2 rounded-md hover:bg-gray-600 transition duration-300 mt-4"
        >
            Add Book
        </button>
    </form>

    <div class="text-center mt-4">
        <a href="/admin/books/list" class="text-gray-600 hover:text-gray-800">
            Back to Book List
        </a>
    </div>
</div>
